{
  "name": "nextjs-payload-starter",
  "version": "1.0.0",
  "description": "Next.js 15 + Payload CMS 3.0 Starter Template",
  "author": "Roger <roger@net1io.com>",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=\"${NODE_OPTIONS} --no-deprecation\" next dev",
    "build": "cross-env NODE_OPTIONS=\"${NODE_OPTIONS} --no-deprecation\" next build",
    "start": "cross-env NODE_OPTIONS=\"${NODE_OPTIONS} --no-deprecation\" next start",
    "lint": "next lint",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "payload": "payload",
    "clean": "rm -rf .next node_modules",
    "reinstall": "pnpm clean && pnpm install"
  },
  "dependencies": {
    "@payloadcms/db-postgres": "^3.0.0-beta.117",
    "@payloadcms/next": "^3.0.0-beta.117",
    "@payloadcms/plugin-cloud": "^3.0.0-beta.117",
    "@payloadcms/richtext-lexical": "^3.0.0-beta.117",
    "@payloadcms/ui": "^3.0.0-beta.117",
    "payload": "^3.0.0-beta.117",
    "graphql": "^16.8.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "next": "15.1.0",
    "sharp": "^0.33.5",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "typescript": "5.6.3",
    "drizzle-orm": "^0.36.4",
    "postgres": "^3.4.4",
    "ioredis": "^5.4.1",
    "framer-motion": "^11.15.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.5",
    "zod": "^3.23.8",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "date-fns": "^4.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.7",
    "drizzle-kit": "^0.29.1",
    "tailwindcss": "^3.4.17",
    "@tailwindcss/typography": "^0.5.15",
    "@tailwindcss/forms": "^0.5.9",
    "postcss": "^8.4.49",
    "autoprefixer": "^10.4.20",
    "sass": "^1.83.0",
    "eslint": "^9.17.0",
    "eslint-config-next": "15.1.0",
    "prettier": "^3.4.2",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=18.17.0"
  }
}
